%h2.sub-header Listing Products
= link_to 'New Product', new_admin_product_path, class: 'btn btn-success'
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Title
        %th Description
        %th Img url
        %th Price
        %th
    %tbody
      = render partial: 'product', collection: @products

.digg_pagination
  .page_info
    = page_entries_info @products
  = will_paginate @products, :container => false
