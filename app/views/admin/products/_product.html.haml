%tr
  %td= product.title
  %td=  truncate(product.description, length: 100)
  %td= image_tag(product.img_url, size: '100x100')
  %td= product.price
  %td= link_to 'Show', [:admin, product]
  %td= link_to 'Edit', edit_admin_product_path(product)
  %td= link_to 'Destroy', [:admin, product], :method => :delete, :data => { :confirm => 'Are you sure?' }
