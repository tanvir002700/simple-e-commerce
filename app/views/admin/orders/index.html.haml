%h1 Listing orders

%table
  %thead
    %tr
      %th Name
      %th Address
      %th Email
      %th Pay type
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.name
        %td= order.address
        %td= order.email
        %td= order.pay_type
        %td= link_to 'Show', [:admin, order]
        %td= link_to 'Edit', edit_admin_order_path(order)
        %td= link_to 'Destroy', [:admin, order], :method => :delete, :data => { :confirm => 'Are you sure?' }
%br
