= form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: { role: 'form', class: 'form-horizontal' }) do |f|
  .form-group
    .col-sm-offset-4.col-sm-4
      %h2.form-signing-heading Please Sign Up
  = devise_error_messages!

  .form-group
    .col-sm-4.text-right
      = f.label :email, class: 'control-label'
    .col-sm-4
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter Email'
  %br
  .form-group
    .col-sm-4.text-right
      = f.label :password, class: 'control-label'
    .col-sm-4
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password,class: 'form-control', autocomplete: "off", placeholder: 'Enter your password.'
  %br

  .form-group
    .col-sm-4.text-right
      = f.label :password_confirmation, class: 'control-label'
    .col-sm-4
      = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: 'Password confirmation'
  %br

  .form-group
    .col-sm-offset-4.col-sm-4.text-center
      %span.text-center
        = f.submit 'Sign up', class: 'btn btn-primary'

  .form-group
    .col-sm-offset-4.col-sm-4
      = render "devise/shared/links"
